# Environment Configuration for SaaSka Career Platform

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_API_VERSION=v1
REACT_APP_ENVIRONMENT=development

# Authentication
REACT_APP_JWT_SECRET=your-super-secret-jwt-key-here
REACT_APP_JWT_EXPIRES_IN=7d
REACT_APP_REFRESH_TOKEN_EXPIRES_IN=30d

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/saaska_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=saaska_db
DATABASE_USERNAME=username
DATABASE_PASSWORD=password

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Storage
STORAGE_TYPE=local
AWS_S3_BUCKET=saaska-uploads
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Email Service
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@saaska.com
EMAIL_FROM_NAME=Saaska Career Platform

# Job Search APIs
ADZUNA_APP_ID=your-adzuna-app-id
ADZUNA_API_KEY=your-adzuna-api-key
INDEED_API_KEY=your-indeed-api-key
LINKEDIN_API_KEY=your-linkedin-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key

# AI Services (for resume optimization and interview practice)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Payment Processing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=true

# Development
NODE_ENV=development
PORT=8000
DEBUG=saaska:*
